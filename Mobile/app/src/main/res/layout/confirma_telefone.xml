<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mapa.mechame.mechame.ConfirmaTelefone"
    android:id="@+id/confirmaTelefone"
    android:background="@drawable/backgroundapp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtDigiteTelefone"
        android:id="@+id/textView"
        android:height="@dimen/abc_action_bar_stacked_max_height"
        android:textColor="#fff7ffd3"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/logotipo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtTelefone"

        android:hint="55 11 12345-1234"
        android:layout_below="@+id/textView"
        android:phoneNumber="true"
        android:textAlignment="center"
        android:maxLength="13"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColorHint="#8d5e7871" />



    <ImageView
        android:layout_width="290px"
        android:layout_height="200px"
        android:id="@+id/logotipo"
        android:background="@drawable/mechamelogo2"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnValidarTelefone"

        android:src="@drawable/btnprosseguir"
        android:layout_below="@+id/txtTelefone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />


</RelativeLayout>
