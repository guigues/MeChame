<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true" />

    <SearchView
        android:id="@+id/txtBuscaLocal"
        android:layout_width="350px"
        android:layout_height="50px"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25px"
        android:searchIcon="@drawable/lupa"
        android:searchHintIcon="@drawable/lupa"
        android:queryHint="Procurar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#ed272425"
        android:textSize="30dp"
        android:textAlignment="center"

        />


    <ImageView
        android:layout_width="60px"
        android:layout_height="60px"
        android:id="@+id/btnBuscaLocal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtBuscaLocal"
        android:layout_marginLeft="20px"
        android:layout_marginTop="35px"
        android:background="@drawable/home"
        />
    <ImageButton
        android:layout_width="80px"
        android:layout_height="80px"
        android:id="@+id/btnConfig"
        android:layout_alignTop="@+id/btnLembretes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35px"
        android:background="@drawable/confg" />



    <ImageButton
        android:layout_width="80px"
        android:layout_height="80px"
        android:id="@+id/btnLembretes"
        android:layout_marginBottom="46dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35px"
        android:background="@drawable/lembrete" />






</RelativeLayout>